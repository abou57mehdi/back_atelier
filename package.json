{
  "name": "billun-backend",
  "version": "1.0.0",
  "description": "Backend for Billun Equipment Anomaly Management and Tracking System",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "node test-api.js",
    "test:workshop": "node test-workshop-api.js",
    "test:equipment": "node test-equipment-creation.js",
    "seed": "node seed-workshop-data.js",
    "seed:users": "node seed-users.js",
    "create:admin": "node create-admin.js",
    "setup": "npm install && node setup-admin.js",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "logs": "tail -f logs/*.log",
    "db:reset": "node scripts/reset-database.js"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.3.5",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "nodemon": "^3.1.0"
  }
}
